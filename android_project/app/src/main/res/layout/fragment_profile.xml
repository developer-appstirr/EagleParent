<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/primaryBlue"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dialog_bg"
        android:orientation="vertical"
        >

        <com.google.android.material.circularreveal.CircularRevealFrameLayout
          android:layout_marginVertical="@dimen/x32"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imvProfile"
                android:paddingRight="@dimen/x8"
                android:layout_width="@dimen/x110"
                android:layout_height="@dimen/x110"
                android:src="@drawable/profile"/>

            <ImageView
                android:id="@+id/ivEditProfileImg"
                android:background="@drawable/shape_circle"
                android:layout_width="30dp"
                android:padding="@dimen/x7"
                android:layout_marginBottom="-32dp"
                android:layout_gravity="center|end"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_camera_alt_24"
                app:tint="@color/white" />


        </com.google.android.material.circularreveal.CircularRevealFrameLayout>


        <EditText
            android:layout_marginVertical="@dimen/x16"
            android:id="@+id/etFullName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x60"
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x16"
            android:layout_marginHorizontal="@dimen/x30"
            android:drawablePadding="@dimen/x20"
            android:background="@drawable/ic_text_field"
            android:drawableLeft="@drawable/ic_people"
            android:gravity="center|start"
            android:inputType="textCapSentences"
            android:hint="Full Name"
            android:fontFamily="@font/redhatdisplay_medium"
            android:textColor="@color/textHintColor"
            android:textColorHint="@color/textHintColor"
            android:textSize="@dimen/s16" />


        <EditText
            android:id="@+id/etEmail"
            android:layout_marginBottom="@dimen/x16"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x60"
            android:paddingLeft="@dimen/x16"
            android:paddingRight="@dimen/x16"
            android:layout_marginHorizontal="@dimen/x30"
            android:drawablePadding="@dimen/x16"
            android:background="@drawable/ic_text_field"
            android:drawableLeft="@drawable/ic_email"
            android:gravity="center|start"
            android:inputType="textEmailAddress"
            android:hint="Email Address"
            android:fontFamily="@font/redhatdisplay_medium"
            android:textColor="@color/textHintColor"
            android:textColorHint="@color/textHintColor"
            android:textSize="@dimen/s16" />


        <EditText
            android:layout_marginBottom="@dimen/x16"
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x60"
            android:paddingLeft="@dimen/x21"
            android:paddingRight="@dimen/x16"
            android:layout_marginHorizontal="@dimen/x30"
            android:drawablePadding="@dimen/x20"
            android:background="@drawable/ic_text_field"
            android:drawableLeft="@drawable/ic_phone"
            android:gravity="center|start"
            android:inputType="number"
            android:hint="Phone Number"
            android:fontFamily="@font/redhatdisplay_medium"
            android:textColor="@color/textHintColor"
            android:textColorHint="@color/textHintColor"
            android:textSize="@dimen/s16" />



        <TextView
           android:layout_marginVertical="@dimen/x48"
            android:id="@+id/btnUpdate"
            android:padding="@dimen/x16"
            android:fontFamily="@font/redhatdisplay_bold"
            android:layout_marginHorizontal="@dimen/x30"
            android:backgroundTint="@color/golden"
            android:gravity="center"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:layout_height="@dimen/x60"
            android:text="Update"
            android:background="@drawable/ic_bg_button"
            android:textSize="@dimen/s16"

            />

    </LinearLayout>

</LinearLayout>



