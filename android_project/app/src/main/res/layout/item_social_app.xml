<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center|start"
    android:layout_marginBottom="@dimen/x16"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivAppImage"
        android:layout_marginStart="@dimen/x8"
        android:layout_width="@dimen/x64"
        android:layout_height="@dimen/x64"
        android:src="@drawable/youtube"/>

        <TextView
            android:id="@+id/txtAppName"
            android:layout_marginHorizontal="@dimen/x16"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:text="Youtube"
            android:textSize="@dimen/s18"
            android:fontFamily="@font/redhatdisplay_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_gravity="center"
            android:layout_width="20dp"
            android:rotation="180"
            android:layout_height="20dp"
            android:src="@drawable/ic_back"
            android:layout_marginEnd="@dimen/x16"
            app:tint="@color/black" />


</LinearLayout>

