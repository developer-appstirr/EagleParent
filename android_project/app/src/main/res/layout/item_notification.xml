<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"

    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_margin="@dimen/x16"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:backgroundTint="@color/notification_bg"
            android:padding="@dimen/x16"
            android:background="@drawable/shape_circle"
            android:id="@+id/imgNotification"
            android:layout_gravity="center"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/facebook"/>

        <LinearLayout
            android:layout_weight="3"
            android:layout_marginStart="@dimen/x16"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNotificationTitle"
                android:text="Threat Found"
                android:layout_marginEnd="@dimen/x5"
                android:layout_marginStart="@dimen/x5"
                android:layout_width="match_parent"
                android:fontFamily="@font/redhatdisplay_bold"
                android:textColor="@color/primaryBlue"
                android:textSize="@dimen/s14"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="@dimen/x2"
                android:id="@+id/txtNotificationDescription"
                android:text="Facebook threat detected."
                android:layout_marginStart="@dimen/x5"
                android:layout_marginEnd="@dimen/x5"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:textSize="@dimen/s12"
                android:fontFamily="@font/redhatdisplay_regular"
                android:layout_height="wrap_content"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x6"
                android:layout_marginEnd="@dimen/x5"
                android:orientation="horizontal">

                <ImageView
                    android:layout_marginLeft="@dimen/x5"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_date"
                    app:tint="@color/textHintColor" />

                <TextView
                    android:id="@+id/txtDate"
                    android:text="23 APR,2021"
                    android:layout_marginStart="@dimen/x5"
                    android:layout_width="wrap_content"
                    android:textColor="@color/textHintColor"
                    android:textSize="@dimen/s10"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_gravity="center|bottom"
                    android:layout_width="0.5dp"
                    android:layout_height="11dp"
                    android:layout_marginBottom="@dimen/x1"
                    android:layout_marginHorizontal="@dimen/x8"
                    android:background="@color/textHintColor" />

                <TextView

                    android:id="@+id/txtTime"
                    android:text=" 01:30 PM"
                    android:layout_width="wrap_content"
                    android:textColor="@color/textHintColor"
                    android:textSize="@dimen/s10"
                    android:layout_height="wrap_content"/>



            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/btnMenu"
            android:layout_gravity="center|end"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_menu"/>

    </LinearLayout>

    <ImageView

        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:tint="@color/textHintColor"
        android:src="@drawable/line"/>

</LinearLayout>