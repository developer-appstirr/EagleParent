<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="6"
    android:gravity="center|start"
    android:layout_marginBottom="@dimen/x16"
    android:orientation="horizontal">

    <ImageView
      android:layout_marginStart="@dimen/x8"
        android:layout_weight="0.5"
        android:id="@+id/ivAppImage"
        android:layout_width="@dimen/x48"
        android:layout_height="@dimen/x48"
        android:src="@drawable/youtube"/>

    <TextView
            android:id="@+id/txtAppName"
            android:layout_marginStart="@dimen/x8"
            android:layout_weight="4.5"
            android:textColor="@color/black"
            android:text="Youtube"
            android:textSize="@dimen/s16"
            android:fontFamily="@font/redhatdisplay_bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        app:icon="@drawable/ic_baseline_check_circle_outline_24"
        app:iconTint="@color/green"
        android:stateListAnimator="@null"
        android:background="@null"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:layout_weight="0.5"
        android:id="@+id/txtAllow"
        android:layout_gravity="center"
        android:layout_width="@dimen/x24"
        android:layout_height="@dimen/x24"/>

    <com.google.android.material.button.MaterialButton
        android:background="@null"
        android:stateListAnimator="@null"
        android:id="@+id/txtBlock"
        app:icon="@drawable/ic_block"
        app:iconTint="@color/red"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:layout_weight="0.5"
        android:layout_gravity="center"
        android:layout_width="@dimen/x24"
        android:layout_height="@dimen/x24"
        />





</LinearLayout>

