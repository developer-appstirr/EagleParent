<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_top"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_marginLeft="@dimen/x16"
            android:layout_width="@dimen/x24"
            android:layout_height="@dimen/x24"
            android:src="@drawable/ic_back"/>


    <TextView
        android:textColor="@color/white"
        android:layout_margin="@dimen/x28"
        android:text="Forgot Password"
        android:textSize="@dimen/s22"
        android:fontFamily="@font/redhatdisplay_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    </LinearLayout>


    <ScrollView
        android:scrollbars="none"
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/dialog_bg"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x160"
                android:layout_marginHorizontal="@dimen/x80"
                android:layout_marginVertical="@dimen/x32"
                android:src="@drawable/ic_biometric" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/x60"
                android:fontFamily="@font/redhatdisplay_bold"
                android:gravity="center"
                android:text="We have sent you a 4 digit code to your email address."
                android:textColor="@color/black"
                android:textSize="@dimen/s20" />


            <com.poovam.pinedittextfield.SquarePinField
                android:id="@+id/linePinFiledCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/x30"
                android:layout_marginTop="@dimen/x16"
                android:inputType="number"
                android:textSelectHandle="@drawable/text_handle"
                android:textSize="@dimen/s16"
                app:cornerRadius="10dp"
                app:fieldBgColor="#ddd"
                app:highlightColor="@color/black"
                app:highlightType="currentField"
                app:isCursorEnabled="false"
                app:lineThickness="@dimen/x1"
                app:noOfFields="4" />

            <TextView
                android:id="@+id/txtResendCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/x30"
                android:fontFamily="@font/redhatdisplay_bold"
                android:gravity="center"
                android:text="Resend Code"
                android:textColor="@color/black"
                android:textSize="@dimen/s16" />


            <TextView
                android:id="@+id/btnNext"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x60"
                android:layout_marginHorizontal="@dimen/x30"
                android:layout_marginBottom="@dimen/x30"
                android:background="@drawable/ic_bg_button"
                android:backgroundTint="@color/golden"
                android:fontFamily="@font/redhatdisplay_bold"
                android:gravity="center"
                android:padding="@dimen/x16"
                android:text="Next"
                android:textColor="@color/black"
                android:textSize="@dimen/s16"

                />


        </LinearLayout>
    </ScrollView>
</LinearLayout>

