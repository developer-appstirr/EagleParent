<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_round_bg"
    android:gravity="center"
    android:layout_margin="@dimen/x15"
    android:padding="@dimen/x5"
    android:id="@+id/llMainView">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Signout"
        android:fontFamily="@font/redhatdisplay_bold"
        android:textColor="@color/primaryBlue"
        android:textSize="@dimen/s20"
        android:layout_marginTop="@dimen/x10"

        android:layout_marginBottom="@dimen/x20"

        />

    <TextView
        android:id="@+id/tvTitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/s14"
        android:gravity="center"
        android:layout_marginStart="@dimen/x35"
        android:layout_marginEnd="@dimen/x35"
        android:layout_marginBottom="@dimen/x35"
        android:text="Are you sure you want to signout?"
        android:visibility="visible"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"
        android:layout_marginBottom="@dimen/x40"
        >

        <TextView
            android:layout_weight="1"
            android:id="@+id/btnYes"
            android:textSize="@dimen/s14"
            android:gravity="center"
            android:text="Yes"
            android:padding="@dimen/x16"
            android:textColor="@color/white"
            android:fontFamily="@font/redhatdisplay_medium"
            android:backgroundTint="@color/primaryBlue"
            android:background="@drawable/rounded_button_corner"
            android:layout_marginHorizontal="@dimen/x20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_weight="1"
            android:id="@+id/btnNo"
            android:gravity="center"
            android:text="No"
            android:textColor="@color/black"
            android:fontFamily="@font/redhatdisplay_medium"
            android:padding="@dimen/x16"
            android:backgroundTint="@color/golden"
            android:background="@drawable/rounded_button_corner"
            android:layout_marginHorizontal="@dimen/x20"
            android:textSize="@dimen/s14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>








    </LinearLayout>

</LinearLayout>