<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">


    <!--  App Green  -->
    <style name="AppGreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="android:statusBarColor" tools:targetApi="M">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Status Bar Text and Background Color -->
        <item name="colorPrimary">@color/primaryBlue</item>
        <item name="colorPrimaryDark">@color/primaryBlue</item>
        <item name="colorAccent">@color/black</item>
        <item name="listPreferredItemHeightSmall">60dp</item>

        <!-- font set -->
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="android:editTextStyle">@style/EditViewStyle</item>


        <!-- ALl TextInput Line Bottom Color -->
    </style>

    <style name="RadioButtonStyle" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/primaryBlue</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorAccent">@color/primaryBlue</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- ToolBar -->
    <style name="ToolBarTheme.ToolBarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
    </style>

    <style name="AppGreenTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppGreenTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppGreenTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/redhatdisplay_regular</item>
        <item name="android:textSize">@dimen/x14</item>
    </style>

    <style name="Widget.MyApp.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="materialThemeOverlay">@style/ThemeOverlay.MyApp.Chip.Choice</item>
    </style>

    <!-- Disabling elevation overlays because when chip's default background/surface
         composite are combined with elevation overlays in a highly elevated dialog,
         the resulting color becomes too light and causes contrast
         issues. -->
    <style name="ThemeOverlay.MyApp.Chip.Choice" parent="">
        <item name="elevationOverlayEnabled">false</item>
    </style>


    <style name="TextBold" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/redhatdisplay_bold</item>
        <item name="android:textSize">@dimen/x14</item>
    </style>

    <style name="EditViewStyle" parent="android:Widget.EditText">
        <item name="android:fontFamily">@font/redhatdisplay_regular</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/green</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>

    <style name="SCBSwitchBlue" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/primaryBlue</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>



    <style name="SpinnerTheme">
        <item name="fontFamily">@font/redhatdisplay_medium</item>
        <item name="android:textSize">@dimen/s16</item>
        <item name="android:textColor">@color/textHintColor</item>

    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/redhatdisplay_medium</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="popupMenuStyle" >
        <item name="android:fontFamily">@font/redhatdisplay_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:divider">@color/textHintColor</item>
        <item name="android:dividerHeight">1dp</item>
    </style>


    <style name="AlertDialogTheme">
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNeutralButtonStyle">@style/Alert.Button.Neutral</item>
    </style>

    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/colorPrimaryDark</item>
        <item name="rippleColor">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/redhatdisplay_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Alert.Button.Neutral" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:fontFamily">@font/redhatdisplay_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/colorAccent</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">12sp</item>
    </style>



</resources>